{
    "name": "victory-sokolov-blog",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Viktor Sokolov"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint content/**/*.mdx",
        "commit": "cz",
        "prepare": "husky install",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,json,js,md,mdx,scss,html} --write",
        "prebuild": "yarn run generate && yarn run copyimages",
        "copyimages": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/copy-images.ts",
        "generate": "npm-run-all generate:**",
        "generate:sitemap": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/generate-sitemap.ts",
        "generate:feed": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/generate-feed.ts"
    },
    "dependencies": {
        "@vercel/analytics": "^1.0.0",
        "@vsokolov/utils": "^0.8.0",
        "axios": "^1.3.6",
        "dotenv": "^16.0.3",
        "file-type": "^18.2.1",
        "framer-motion": "^10.12.4",
        "gray-matter": "^4.0.3",
        "marked": "^4.3.0",
        "mdx-prism": "^0.3.4",
        "next": "^13.3.1",
        "next-mdx-remote": "^4.4.1",
        "next-pwa": "^5.6.0",
        "plaiceholder": "^2.5.0",
        "prism-react-renderer": "^1.3.5",
        "react": "^18.2.0",
        "react-blurhash": "^0.3.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-markdown": "^8.0.7",
        "rehype-slug": "^5.1.0",
        "remark": "^14.0.2",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^15.0.2",
        "sharp": "^0.32.0",
        "styled-components": "^5.3.9",
        "twitter-api-v2": "^1.14.2"
    },
    "devDependencies": {
        "@types/node": "^18.15.13",
        "@types/react": "^18.0.38",
        "@types/styled-components": "^5.1.26",
        "commitizen": "^4.3.0",
        "eslint": "^8.39.0",
        "eslint-config-next": "^13.3.1",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-mdx": "^2.0.5",
        "eslint-plugin-prettier": "^4.2.1",
        "feed": "^4.2.2",
        "globby": "^13.1.4",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "xml2json": "^0.12.0"
    },
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.17"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "npm run lint"
        }
    }
}
