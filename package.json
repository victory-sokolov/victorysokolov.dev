{
    "name": "victory-sokolov-blog",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Viktor Sokolov"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:mdx": "yarn eslint content/**/*.mdx",
        "check-types": "tsc --noEmit --pretty",
        "commit": "cz",
        "prepare": "husky install",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,tsx} --write",
        "prebuild": "yarn format && yarn copyimages && yarn generate",
        "copyimages": "esno ./lib/copy-images.ts",
        "generate": "npm-run-all generate:**",
        "generate:feed": "esno ./lib/generate-feed.ts",
        "postbuild": "next-sitemap"
    },
    "dependencies": {
        "@emotion/is-prop-valid": "^1.2.1",
        "@vercel/analytics": "^1.1.1",
        "@vsokolov/utils": "0.13.2",
        "axios": "^1.6.2",
        "dotenv": "^16.0.3",
        "file-type": "^18.7.0",
        "framer-motion": "^10.16.16",
        "gray-matter": "^4.0.3",
        "marked": "^10.0.0",
        "mdx-prism": "^0.3.4",
        "next": "^14.0.4",
        "next-mdx-remote": "^4.4.1",
        "next-pwa": "^5.6.0",
        "next-seo": "6.4.0",
        "prism-react-renderer": "^2.3.1",
        "prismjs": "^1.29.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.12.0",
        "react-markdown": "^9.0.1",
        "rehype-slug": "^6.0.0",
        "remark": "^15.0.1",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^16.0.1",
        "styled-components": "^6.1.2",
        "styled-react-modal": "^3.1.0",
        "twitter-api-v2": "^1.15.2"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "6.15.0",
        "@typescript-eslint/parser": "6.15.0",
        "commitizen": "^4.3.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-mdx": "^3.0.0",
        "eslint-plugin-no-floating-promise": "^1.0.2",
        "eslint-plugin-prettier": "^5.1.0",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-styled-components-a11y": "^2.1.31",
        "esno": "^4.0.0",
        "feed": "^4.2.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "next-sitemap": "4.2.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "xml2json": "^0.12.0"
    },
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.17"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "yarn run lint:fix"
        }
    }
}
