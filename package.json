{
    "name": "victory-sokolov-blog",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Viktor Sokolov"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:mdx": "yarn eslint content/**/*.mdx",
        "commit": "cz",
        "prepare": "husky install",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,tsx} --write",
        "prebuild": "yarn format && yarn copyimages && yarn generate",
        "copyimages": "esno ./lib/copy-images.ts",
        "generate": "npm-run-all generate:**",
        "generate:feed": "esno ./lib/generate-feed.ts",
        "postbuild": "next-sitemap"
    },
    "dependencies": {
        "@emotion/is-prop-valid": "^1.2.1",
        "@vercel/analytics": "^1.0.2",
        "@vsokolov/utils": "^0.11.0",
        "axios": "^1.5.0",
        "dotenv": "^16.0.3",
        "file-type": "^18.2.1",
        "framer-motion": "^10.16.4",
        "gray-matter": "^4.0.3",
        "marked": "^4.3.0",
        "mdx-prism": "^0.3.4",
        "next": "^13.5.2",
        "next-mdx-remote": "^4.4.1",
        "next-pwa": "^5.6.0",
        "next-sitemap": "4.2.3",
        "plaiceholder": "^2.5.0",
        "preact": "10.17.1",
        "prism-react-renderer": "^2.0.6",
        "prismjs": "^1.29.0",
        "react": "^18.2.0",
        "react-blurhash": "^0.3.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.11.0",
        "react-markdown": "^8.0.7",
        "rehype-slug": "^5.1.0",
        "remark": "^14.0.2",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^15.0.2",
        "sharp": "^0.32.5",
        "styled-components": "^6.0.8",
        "styled-react-modal": "^3.0.1",
        "twitter-api-v2": "^1.15.1"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.0",
        "@types/node": "^20.6.3",
        "@types/react": "^18.2.22",
        "@types/styled-components": "^5.1.27",
        "commitizen": "^4.3.0",
        "eslint": "^8.49.0",
        "eslint-config-next": "^13.5.2",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-mdx": "^2.2.0",
        "eslint-plugin-no-floating-promise": "^1.0.2",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-styled-components-a11y": "^2.1.31",
        "esno": "^0.17.0",
        "feed": "^4.2.2",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "xml2json": "^0.12.0"
    },
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.17"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "yarn run lint:fix"
        }
    }
}
