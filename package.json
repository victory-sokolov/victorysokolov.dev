{
    "name": "victory-sokolov-blog",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "author": {
        "name": "Viktor Sokolov"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build && npm run prebuild",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,json,js,md,scss,html,java,php} --write",
        "prebuild": "npm run generate && npm run copyimages",
        "copyimages": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/copy-images.ts",
        "generate": "npm-run-all generate:**",
        "generate:sitemap": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/generate-sitemap.ts",
        "generate:feed": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/generate-feed.ts",
        "generate:tips": "node --loader ts-node/esm --experimental-specifier-resolution=node ./lib/twitter-tips.ts"
    },
    "dependencies": {
        "axios": "^1.2.1",
        "dotenv": "^16.0.3",
        "file-type": "^17.1.6",
        "gray-matter": "^4.0.3",
        "marked": "^4.2.3",
        "mdx-prism": "^0.3.4",
        "next": "^13.0.7",
        "next-mdx-remote": "^4.2.0",
        "prism-react-renderer": "^1.3.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.7.1",
        "react-markdown": "^8.0.4",
        "rehype-slug": "^5.0.1",
        "remark": "^14.0.2",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^15.0.1",
        "sharp": "^0.31.2",
        "styled-components": "^5.3.6",
        "twitter-api-v2": "^1.12.5"
    },
    "devDependencies": {
        "@types/node": "^18.11.17",
        "@types/react": "^18.0.26",
        "@types/styled-components": "^5.1.26",
        "eslint": "^8.20.0",
        "eslint-config-next": "^13.1.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "feed": "^4.2.2",
        "globby": "^13.1.2",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.4",
        "node-html-to-image": "^3.2.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "npm run format && npm lint"
        }
    }
}
