{
    "name": "victory-sokolov-blog",
    "version": "1.0.0",
    "private": true,
    "packageManager": "pnpm@8.15.1+sha1.8adba2d20330c02d3856e18c4eb3819d1d3ca6aa",
    "author": {
        "name": "Viktor Sokolov"
    },
    "license": "MIT",
    "engines": {
        "pnpm": ">= 8.15",
        "npm": "please use pnpm"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "analyze": "ANALYZE=true pnpm run build",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:mdx": "pnpm eslint content/**/*.mdx",
        "check-types": "tsc --noEmit --pretty",
        "commit": "cz",
        "prepare": "husky install",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,tsx} --write",
        "prebuild": "pnpm format && pnpm generate",
        "generate": "npm-run-all generate:**",
        "generate:copyimages": "tsx ./lib/copy-images.ts",
        "fetch-tips": "tsx --env-file .env ./lib/twitter-tips.mts",
        "spell-check": "spellchecker --config .spellcheckerrc.json",
        "knip": "knip",
        "knip:fix": "knip --fix"
    },
    "dependencies": {
        "@emotion/is-prop-valid": "^1.2.2",
        "@vercel/analytics": "^1.2.2",
        "@vercel/speed-insights": "^1.0.10",
        "@vsokolov/utils": "0.23.0",
        "axios": "^1.6.8",
        "file-type": "^19.0.0",
        "framer-motion": "^11.1.7",
        "gray-matter": "^4.0.3",
        "next": "^14.2.3",
        "next-mdx-remote": "^4.4.1",
        "next-pwa": "^5.6.0",
        "next-seo": "^6.5.0",
        "prism-react-renderer": "^2.3.1",
        "prismjs": "^1.29.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.1.0",
        "react-wrap-balancer": "1.1.0",
        "rehype-slug": "^6.0.0",
        "remark": "^15.0.1",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^16.0.1",
        "sharp": "^0.33.3",
        "styled-components": "^6.1.8",
        "styled-react-modal": "^3.1.1",
        "twitter-api-v2": "^1.16.3"
    },
    "devDependencies": {
        "@antfu/eslint-config": "2.16.0",
        "@next/bundle-analyzer": "^14.2.3",
        "@swc/plugin-styled-components": "2.0.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.12.7",
        "@types/react": "^18.3.0",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "commitizen": "^4.3.0",
        "eslint": "^9.1.1",
        "eslint-config-next": "^14.2.3",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-mdx": "^3.1.5",
        "eslint-plugin-no-floating-promise": "^2.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-styled-components-a11y": "^2.1.32",
        "feed": "^4.2.2",
        "husky": "^9.0.11",
        "knip": "^5.11.0",
        "lint-staged": "^15.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "spellchecker-cli": "6.2.0",
        "tsx": "^4.7.3",
        "typescript": "^5.4.5",
        "xml2json": "^0.12.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "pnpm run lint:fix"
        }
    }
}
